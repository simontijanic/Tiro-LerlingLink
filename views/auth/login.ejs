<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Logg inn</h2>
                    
                    <%- include('../partials/messages') %>
                    
                    <form action="/auth/login" method="POST">
                        <div class="mb-3">
                            <label for="email" class="form-label">E-post</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        
                        <div class="mb-3">
                            <label for="password" class="form-label">Passord</label>
                            <input type="password" class="form-control" id="password" name="password" required>
                        </div>
                        
                        <button type="submit" class="btn btn-primary w-100">Logg inn</button>
                    </form>
                    
                    <div class="text-center mt-3">
                        <a href="/auth/forgot-password" class="text-decoration-none">Glemt passord?</a>
                    </div>
                    
                    <hr class="my-4">
                    
                    <p class="text-center mb-0">
                        Har du ikke en konto? 
                        <a href="/auth/register" class="text-decoration-none">Registrer deg her</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>